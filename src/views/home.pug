doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Camera Server
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header
            h1 Camera Server
        main
            div#noname
                button#Enter Enter Without Password
                button#SampleButton SampleButton
                button#videoPlay VideoPlay
                video#LocalVideo(src="/public/testVideo.mp4", controls, playsinline, width="1280", height="720")
            div#welcome
                form    
                    input(placeholder="room name", required, type="text")
                    button Enter room
            div#call
                div#myStream
                    video#myFace(autoplay,playsinline, width="1280", height="720")
                    button#camera Turn Camera Off
                    select#cameras
                    select#resolutions
                    button#peerResCheck Check Peer's Camera Resolution
                    video#peerFace(autoplay,playsinline, width="1280", height="720")
            div#screenShare
                video#screen(autoplay,playsinline, width="1280", height="720")
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js") 